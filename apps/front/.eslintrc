{
    "root": true,
    "env": {
      "browser": true,
      "es2022": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "@vue/typescript/recommended",
      "plugin:vue/vue3-recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2022
    },
    "plugins": [],
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "vue/multi-word-component-names": "off",
      "no-undef": "off",
      "vue/attributes-order": [
        "warn",
        {
          "order": [
            "DEFINITION",
            "LIST_RENDERING",
            "CONDITIONALS",
            "RENDER_MODIFIERS",
            "TWO_WAY_BINDING",
            "GLOBAL",
            ["UNIQUE", "SLOT"],
            "OTHER_DIRECTIVES",
            "OTHER_ATTR",
            "EVENTS",
            "CONTENT"
          ],
          "alphabetical": true
        }
      ]
    }
  }